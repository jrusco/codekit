{
  "name": "codekit",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:playwright",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,html}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,html}",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:security": "npm audit --audit-level=high --only=prod",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "security:check": "npm run audit:security && npm run deps:check",
    "pretest": "npm run security:check",
    "prebuild": "npm run security:check && npm run type-check"
  },
  "dependencies": {
    "dompurify": "^3.1.7",
    "validator": "^13.14.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "terser": "^5.36.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
